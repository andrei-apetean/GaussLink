<Window x:Class="GaussLink.Views.Windows.MessageBox.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GaussLink.Views.Windows.MessageBox"
        mc:Ignorable="d"
        Style="{DynamicResource CustomWindowStyle}"
        ResizeMode="NoResize"
        Title="Message Dialog" Height="200" Width="300">
    <Grid>
        <Canvas>
            <TextBlock Name="Message" Text="No data found" Canvas.Top="20" TextAlignment="Center" Canvas.Left="125"  TextWrapping="Wrap"/>
            <Button Content="OK" Width="50" Canvas.Bottom="20" Canvas.Right="125" Click="Button_Click"/>
        </Canvas>
    </Grid>
</Window>
