<UserControl x:Class="GaussLink.Views.MainDisplay.Tabs.GraphTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GaussLink.Views.MainDisplay.Tabs"
             xmlns:vms="clr-namespace:GaussLink.ViewModels.MainDisplay.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="450">
    <Grid x:Name="parent">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Canvas  x:Name="plotView" ClipToBounds="True">
            </Canvas>
        </Grid>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch"/>
        <Grid Grid.Row="2" >
            <StackPanel>
                <Label Content="Smoothing Factor"/>
                <TextBox Text="1" Name="SmoothFactorTxt" TextChanged="SmoothFactorTxt_TextChanged"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
